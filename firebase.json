{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                ".npm-cache"
            ]
        }
    ],
    "hosting": {
        "public": ".",
        "cleanUrls": true,
        "ignore": [
            "firebase.json",
            "database-rules.json",
            "firestore.rules",
            "firestore.indexes.json",
            "**/.*",
            "**/node_modules/**",
            "functions/**",
            ".agent/**",
            "design-mockups/**",
            "package.json",
            "package-lock.json",
            "README.md"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8081
        },
        "ui": {
            "enabled": true,
            "port": 4000
        },
        "singleProjectMode": true
    }
}