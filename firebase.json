{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20"
    },
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "database-rules.json",
            "firestore.rules",
            "firestore.indexes.json",
            "**/.*",
            "**/node_modules/**",
            "functions/**",
            ".agent/**",
            "design-mockups/**",
            "package.json",
            "package-lock.json",
            "README.md"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}