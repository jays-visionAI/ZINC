<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZYNK - Brand Brain</title>
    <meta name="description" content="ZYNK Brand Brain - Strategic Intelligence Hub">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="brand-brain.css">

    <meta name="theme-color" content="#0A0A0F">
</head>

<body class="dashboard-body">
    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/" class="logo">
                    <svg class="logo-icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 0L40 10V30L20 40L0 30V10L20 0Z" fill="url(#logo-gradient)" />
                        <text x="20" y="29" font-size="22" font-weight="800" fill="white" text-anchor="middle"
                            font-family="Inter, sans-serif">Z</text>
                        <defs>
                            <linearGradient id="logo-gradient" x1="0" y1="0" x2="40" y2="40">
                                <stop offset="0%" stop-color="#8B5CF6" />
                                <stop offset="100%" stop-color="#3B82F6" />
                            </linearGradient>
                        </defs>
                    </svg>
                    <span class="logo-text">ZYNK</span>
                </a>
            </div>

            <div class="sidebar-menu">
                <div class="menu-label">WORKSPACE</div>
                <a href="command-center.html" class="menu-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Command Center
                </a>
                <a href="brand-brain.html" class="menu-item active">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path
                            d="M12 2a4 4 0 0 1 4 4c0 1.5-.8 2.8-2 3.4V11h3a3 3 0 0 1 3 3v1a2 2 0 0 1-2 2h-1v3a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2v-3H6a2 2 0 0 1-2-2v-1a3 3 0 0 1 3-3h3V9.4A4 4 0 0 1 12 2z">
                        </path>
                    </svg>
                    Brand Brain
                </a>
                <a href="studio/" class="menu-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
                        <line x1="7" y1="2" x2="7" y2="22"></line>
                        <line x1="17" y1="2" x2="17" y2="22"></line>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                    </svg>
                    Studio
                </a>
                <a href="user-settings.html" class="menu-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path
                            d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z">
                        </path>
                    </svg>
                    Settings
                </a>
            </div>

            <div class="sidebar-footer">
                <div class="system-status">
                    <span class="status-dot"></span>
                    System Nominal
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Header -->
            <header class="dashboard-header">
                <div class="bb-header-left">
                    <h1>Brand Brain</h1>
                    <div class="header-subtitle">Strategic Intelligence Hub</div>
                </div>
                <div class="bb-header-center">
                    <!-- Project Selector -->
                    <div class="selectors-container">
                        <div class="selector-group">
                            <label>Project:</label>
                            <select id="project-select">
                                <option value="">Loading projects...</option>
                            </select>
                        </div>
                        <div class="selector-divider"></div>
                        <div class="selector-group">
                            <label>Agent Team:</label>
                            <select id="agentteam-select" disabled>
                                <option value="">Select Project First...</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="bb-header-right">
                    <!-- Pipeline Navigation -->
                    <div class="pipeline-nav">
                        <span class="pipeline-item">The Eyes</span>
                        <span class="pipeline-item active">The Brain</span>
                        <span class="pipeline-item">The Hands</span>
                    </div>
                    <div id="user-profile-container"></div>
                </div>
            </header>

            <!-- Brand Health Score Banner -->
            <div class="bb-health-banner">
                <div class="health-score">
                    <span class="score-value" id="health-score-value">70</span>
                    <span class="score-max">/ 100</span>
                </div>
                <div class="health-details">
                    <div class="health-bar-container">
                        <div class="health-bar" id="health-bar" style="width: 70%"></div>
                    </div>
                    <div class="health-breakdown">
                        <span class="breakdown-item">IDENTITY <strong id="score-identity">20/25</strong></span>
                        <span class="breakdown-item">KNOWLEDGE <strong id="score-knowledge">15/25</strong></span>
                        <span class="breakdown-item">STRATEGY <strong id="score-strategy">15/25</strong></span>
                        <span class="breakdown-item">UPDATE <strong id="score-update">10/25</strong></span>
                        <span class="breakdown-item">FEEDBACK <strong id="score-feedback">8/25</strong></span>
                    </div>
                </div>
                <div class="health-status">
                    <span class="status-label" id="health-status-label">Needs Attention</span>
                </div>
            </div>

            <!-- Main 3-Column Layout -->
            <div class="bb-content">
                <!-- Left Column: Core Identity -->
                <section class="bb-section bb-core-identity">
                    <div class="section-header">
                        <div class="section-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <circle cx="12" cy="7" r="4"></circle>
                                <path d="M5.5 21a8.5 8.5 0 0 1 13 0"></path>
                            </svg>
                        </div>
                        <div>
                            <h2>Core Identity</h2>
                            <p class="section-subtitle">The DNA of your brand</p>
                        </div>
                    </div>

                    <div class="section-content">
                        <div class="form-group">
                            <label for="project-name">PROJECT NAME</label>
                            <input type="text" id="project-name" placeholder="e.g. OO Cosmetics">
                        </div>

                        <div class="form-group">
                            <label for="mission">MISSION</label>
                            <textarea id="mission" rows="3"
                                placeholder="Empowering natural beauty through sustainable science..."></textarea>
                        </div>

                        <div class="form-group">
                            <label for="website-url">WEBSITE ANALYSIS</label>
                            <div class="input-with-button">
                                <input type="url" id="website-url" placeholder="https://oocosmetics.com">
                                <button type="button" class="btn-auto" id="btn-auto-analyze">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <path d="M12 6v6l4 2"></path>
                                    </svg>
                                    Auto
                                </button>
                            </div>
                            <div class="analysis-status" id="website-analysis-status">
                                <!-- Will show analysis result -->
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group half">
                                <label for="industry">INDUSTRY</label>
                                <select id="industry">
                                    <option value="">Select...</option>
                                    <option value="beauty">Beauty & Cosmetics</option>
                                    <option value="tech">Technology</option>
                                    <option value="fashion">Fashion</option>
                                    <option value="food">Food & Beverage</option>
                                    <option value="health">Health & Wellness</option>
                                    <option value="finance">Finance</option>
                                    <option value="education">Education</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="form-group half">
                                <label for="target">TARGET</label>
                                <input type="text" id="target" placeholder="25-40 Females">
                            </div>
                        </div>

                        <button type="button" class="btn-save" id="btn-save-identity">Save Changes</button>
                    </div>
                </section>

                <!-- Center Column: Strategy Directives -->
                <section class="bb-section bb-strategy">
                    <div class="section-header">
                        <div class="section-icon strategy">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="M12 16v-4"></path>
                                <path d="M12 8h.01"></path>
                            </svg>
                        </div>
                        <div>
                            <h2>Strategy Directives</h2>
                            <p class="section-subtitle">Fine-tune the content engine</p>
                        </div>
                    </div>

                    <div class="section-content">
                        <!-- Brand Voice -->
                        <div class="directive-block">
                            <label class="directive-label">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                    <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                    <line x1="12" y1="19" x2="12" y2="23"></line>
                                    <line x1="8" y1="23" x2="16" y2="23"></line>
                                </svg>
                                BRAND VOICE
                            </label>
                            <div class="tag-container" id="brand-voice-tags">
                                <span class="tag active" data-value="professional">Professional</span>
                                <span class="tag active" data-value="empathetic">Empathetic</span>
                                <span class="tag" data-value="friendly">Friendly</span>
                                <span class="tag" data-value="bold">Bold</span>
                                <span class="tag" data-value="witty">Witty</span>
                                <button type="button" class="tag-add">+</button>
                            </div>
                            <textarea id="writing-style" class="writing-style-input" rows="2"
                                placeholder='"Use polite honorifics, emojis sparingly, explain tech terms simply."'></textarea>
                        </div>

                        <!-- Current Focus -->
                        <div class="directive-block">
                            <label class="directive-label">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <circle cx="12" cy="12" r="6"></circle>
                                    <circle cx="12" cy="12" r="2"></circle>
                                </svg>
                                CURRENT FOCUS
                            </label>
                            <div class="focus-topic">
                                <span class="focus-label">Topic:</span>
                                <input type="text" id="focus-topic" placeholder="Clean Beauty Trend">
                            </div>
                            <div class="keyword-container" id="focus-keywords">
                                <span class="keyword">#CleanBeauty <button class="keyword-remove">√ó</button></span>
                                <span class="keyword">#Vegan <button class="keyword-remove">√ó</button></span>
                                <span class="keyword">#EcoFriendly <button class="keyword-remove">√ó</button></span>
                                <span class="keyword">#Glow <button class="keyword-remove">√ó</button></span>
                                <input type="text" class="keyword-input" id="keyword-input"
                                    placeholder="Add keyword...">
                            </div>
                        </div>

                        <!-- Tone Intensity -->
                        <div class="directive-block">
                            <label class="directive-label">TONE INTENSITY</label>
                            <div class="tone-slider-container">
                                <span class="tone-label left">Informational</span>
                                <input type="range" id="tone-slider" min="0" max="100" value="60" class="tone-slider">
                                <span class="tone-label right">Action-Oriented</span>
                            </div>
                            <div class="tone-value-display">
                                <span id="tone-value-label">Balanced</span>
                            </div>
                        </div>

                        <!-- Do & Don't -->
                        <div class="directive-row">
                            <div class="directive-block half do-block">
                                <label class="directive-label do">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    DO
                                </label>
                                <ul class="do-dont-list" id="do-list">
                                    <li>Emphasize sustainability</li>
                                    <li>Highlight vegan ingredients</li>
                                </ul>
                                <button type="button" class="btn-add-item" data-list="do">+ Add</button>
                            </div>
                            <div class="directive-block half dont-block">
                                <label class="directive-label dont">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <line x1="18" y1="6" x2="6" y2="18"></line>
                                        <line x1="6" y1="6" x2="18" y2="18"></line>
                                    </svg>
                                    DON'T
                                </label>
                                <ul class="do-dont-list" id="dont-list">
                                    <li>Mention competitors directly</li>
                                    <li>Make unverified medical claims</li>
                                </ul>
                                <button type="button" class="btn-add-item" data-list="dont">+ Add</button>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Right Column: Updates + Knowledge Base -->
                <section class="bb-section bb-right-column">
                    <!-- Sync Status / Updates -->
                    <div class="bb-card bb-updates">
                        <div class="updates-header">
                            <span class="updates-count" id="updates-count">2 Updates</span>
                            <span class="updates-subtitle">Pending synchronization with Hive Mind</span>
                        </div>
                        <ul class="updates-list" id="updates-list">
                            <li>‚Ä¢ Brand Guide PDF added</li>
                            <li>‚Ä¢ Voice Strategy modified</li>
                        </ul>
                        <button type="button" class="btn-sync" id="btn-sync">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M21 2v6h-6"></path>
                                <path d="M3 12a9 9 0 0 1 15-6.7L21 8"></path>
                                <path d="M3 22v-6h6"></path>
                                <path d="M21 12a9 9 0 0 1-15 6.7L3 16"></path>
                            </svg>
                            Sync with Hive Mind
                        </button>
                        <div class="last-sync" id="last-sync">Last Synced: 2 hours ago</div>
                    </div>

                    <!-- Market Pulse Summary -->
                    <div class="bb-card bb-market-pulse">
                        <div class="pulse-header">
                            <div class="pulse-stats">
                                <div class="pulse-stat">
                                    <span class="pulse-value" id="pulse-mentions">127</span>
                                    <span class="pulse-label">Mentions</span>
                                </div>
                                <div class="pulse-stat positive">
                                    <span class="pulse-value" id="pulse-sentiment">72%</span>
                                    <span class="pulse-label">Positive</span>
                                </div>
                                <div class="pulse-stat alert">
                                    <span class="pulse-value" id="pulse-alerts">1</span>
                                    <span class="pulse-label">Alerts</span>
                                </div>
                            </div>
                        </div>
                        <div class="pulse-trend">
                            <span class="trend-label">Top Trend</span>
                            <div class="trend-item">
                                <span class="trend-keyword">#CleanBeauty</span>
                                <span class="trend-change positive">+340%</span>
                            </div>
                        </div>
                        <p class="pulse-suggestion" id="pulse-suggestion">
                            Suggestion: Create content aligning with clean beauty trends.
                        </p>
                    </div>

                    <!-- Knowledge Base -->
                    <div class="bb-card bb-knowledge-base">
                        <h3>Knowledge Base</h3>
                        <p class="kb-subtitle">Manage sources for AI context</p>

                        <div class="kb-tabs">
                            <button class="kb-tab active" data-tab="drive">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path
                                        d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z">
                                    </path>
                                </svg>
                                Drive
                            </button>
                            <button class="kb-tab" data-tab="links">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                                    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                                </svg>
                                Links
                            </button>
                            <button class="kb-tab" data-tab="notes">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                </svg>
                                Notes
                            </button>
                        </div>

                        <div class="kb-content">
                            <!-- Drive Tab -->
                            <div class="kb-tab-content active" id="tab-drive">
                                <div class="kb-status connected">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Google Drive Connected
                                </div>
                                <p class="kb-hint">Large files (PDF, PPTX) are processed via Drive integration.</p>

                                <div class="kb-files" id="drive-files">
                                    <div class="kb-file">
                                        <span class="file-icon pdf">PDF</span>
                                        <div class="file-info">
                                            <span class="file-name">Brand_Guidelines_v2.pdf</span>
                                            <span class="file-desc">Logo usage, color palette</span>
                                        </div>
                                        <span class="file-date">2d ago</span>
                                    </div>
                                    <div class="kb-file">
                                        <span class="file-icon pptx">PPTX</span>
                                        <div class="file-info">
                                            <span class="file-name">Product_Catalog_2024.pptx</span>
                                            <span class="file-desc">Q1 Launch lineup specs</span>
                                        </div>
                                        <span class="file-date">1h ago</span>
                                        <span class="file-status pending">Sync Pending</span>
                                    </div>
                                </div>

                                <button type="button" class="btn-add-drive" id="btn-add-drive">
                                    + Add from Drive
                                </button>
                            </div>

                            <!-- Links Tab -->
                            <div class="kb-tab-content" id="tab-links">
                                <div class="kb-links" id="kb-links">
                                    <div class="kb-link">
                                        <span class="link-icon">üåê</span>
                                        <div class="link-info">
                                            <span class="link-url">https://oocosmetics.com</span>
                                            <span class="link-status">12 pages analyzed</span>
                                        </div>
                                        <button class="btn-remove">√ó</button>
                                    </div>
                                </div>
                                <div class="kb-add-link">
                                    <input type="url" id="new-link-url" placeholder="https://...">
                                    <button type="button" id="btn-add-link">+ Add</button>
                                </div>
                            </div>

                            <!-- Notes Tab -->
                            <div class="kb-tab-content" id="tab-notes">
                                <div class="kb-notes" id="kb-notes">
                                    <div class="kb-note">
                                        <div class="note-header">
                                            <span class="note-title">Partnership Announcement</span>
                                            <button class="btn-remove">√ó</button>
                                        </div>
                                        <p class="note-content">Collaboration with ACME Corp. Confidential until Friday.
                                        </p>
                                    </div>
                                </div>
                                <button type="button" class="btn-add-note" id="btn-add-note">
                                    + Add New Note
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>

    <!-- Firebase SDKs -->
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-storage-compat.js"></script>

    <!-- Config & Auth -->
    <script src="firebase-config.js"></script>
    <script src="auth.js"></script>

    <!-- Scripts -->
    <script src="brand-brain.js"></script>

    <!-- Auth Check -->
    <script>
        firebase.auth().onAuthStateChanged(function (user) {
            if (!user) {
                window.location.href = 'index.html';
            } else {
                const profileContainer = document.getElementById('user-profile-container');
                const navProfile = document.getElementById('user-profile');
                if (navProfile && profileContainer) {
                    profileContainer.appendChild(navProfile);
                }
            }
        });
    </script>
</body>

</html>